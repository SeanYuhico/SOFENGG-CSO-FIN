<div class="gallery">
    
    <div class="text-center">
      <h2>Welcome back, {{org}}!</h2>
      <p>Below are the important links that you can access from the CSO Finance Directory. </p>
    </div>

    {{!-- Container 1 --}}
    <div class="container card-container">

      {{#each card}}
      <a class="cardLink" href={{link}}>
        <div class="col-md-4">
          <figure class="effect-marley card">
              <h4 class="cardTitle">{{cardTitle}}</h4>
              <p class="cardDesc">{{cardDesc}}</p>
          </figure>
        </div>
      </a>
      {{/each}}


        </div>
    </div>

<script>
    $(window).on('load',function(){
      if (!sessionStorage.getItem('shown-modal')){
        $('#viewAnnouncementModal').modal('show');
        sessionStorage.setItem('shown-modal', 'true');
      }
    });
</script>
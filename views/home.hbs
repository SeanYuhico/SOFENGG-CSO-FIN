<!-- Delete Modal -->
        <div class="modal fade" id="deleteModal">
            <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> Delete Card </h4>
                </div>

                <div class="modal-body text-center ">
                  <h2 id ="modal-title" class="modal-title text-center"> Are you sure you want to delete this card? </h2> 
                  <button id= "deleteYesBtn" class="btn btn-default btn-center">Yes</button>
                  <button id= "deleteNoBtn" class="btn btn-default">No</button> 
                </div>

                <div class="modal-footer">
                  <button id="deleteFooterBtn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>

  <!-- Edit Modal -->
        <div class="modal fade" id="editModal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Card </h4>
                </div>
                <div class="modal-body modal-center">
                    <h4 id ="modal-title" class="modal-title">Enter New Title </h4>
                    <input id="inputEditTitle" type="text" class="form-control"> </input>

                    <h4 id ="modal-title" class="modal-title">Enter New Description </h4>
                    <input id="inputEditDescription" type="text" class="form-control"> </input>

                    <h4 id ="modal-title" class="modal-title">Enter New Link </h4>
                    <input id="inputEditLink" type="text" class="form-control"> </input>
                    <button type="submit" id= "saveCardEdit" class="btn btn-default">Save Changes</button> <br/>
                    
                </div>
                <div class="modal-footer">
                    <button id="deleteFooterBtn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>

 <!-- Create Modal -->
        <div class="modal fade" id="createModal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div id="createCardHeader" class="modal-header">
                    <h4 class="modal-title" style="color: whitesmoke;font-weight:bold;">Create New Card </h4>
                </div>
                <div class="modal-body modal-center">
                    <h4 id ="modal-title" class="modal-title">Enter Title </h4>
                    <input id="createTitle" type="text" class="form-control"> </input> <br/>

                    <h4 id ="modal-title" class="modal-title">Enter Description </h4>
                    <textarea class="form-control" rows="10" id="createDesc" style="color: black"> </textarea> <br/>

                    <h4 id ="modal-title" class="modal-title">Enter Link </h4>
                    <input id="createLink" type="text" class="form-control"> </input> <br/>
                    <button type="submit" id= "createCard" class="btn btn-default">Create Card</button> <br/>
                    
                </div>
                <div class="modal-footer">
                    <button id="deleteFooterBtn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>
</body>

  <!-- Edit Modal -->
<!-- Modal -->
        <div class="modal fade" id="editModal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Card </h4>
                </div>
                <div class="modal-body">
                    
                        <h2 id ="modal-title" class="modal-title">  </h4>
                        <form role="form">
                            <div class="form-group"> <br/>
                            <label for="newSheet">Sheet Key </label>
                            <input id = "newSheet" type="text" class="form-control" id="newSheet"> </input>
                            <button type="submit" id= "editSheetBtn" class="btn btn-default">Enter Sheet Key </button> <br/><br/><br/>

                            <label for="currentEmail">Current Email Address</label>
                            <input type="email" class="form-control" id="currentEmail" value="" readonly> </input> <br/>
    
                            <label for="newEmailAddress">New Email Address </label>
                            <input id="newEmailAddress" type="email" class="form-control" id="newEmail"> </input>
                            <button type="submit" id= "editEmailBtn" class="btn btn-default">Edit Email</button> <br/><br/><br/>

                            <label for="currentPassword">Password</label>
                            <div> Current password is hidden for security purposes. </div>
                            <button id= "resetBtn" class="btn btn-default">Reset Password</button> <br/>
                        </form>
                </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


  <!-- Delete Modal -->
